<div class='container-fluid'>
  <div class='row col-sm-12 clearfix'>
    <h5><a href='/'>Show example form</a></h5>
  </div>
  <div class='row'>
    <div class='col-sm-5'>
      <p></p>
      <form class='form-inline' id='get_requests' action='/requests' method='GET'>
        <div class='form-group'>
          <label for='token'>Widget token (/ocsls/example/<b>:token</b> )</label>
          <input id='token' type='text' class='form-control input-sm' name='token'>
        </div>
        <button type='submit' class='btn btn-sm'>GET REQUESTS</button>
      </form>
    </div>
  </div>

  <% if @token %><p>WIDGET <b><%= @token %></b></p><% end %>
  <div class='row col-sm-12'>
    <% if @requests.present? %>
      <table id='requests' class='table table-striped table-bordered table-condensed'>
        <thead>
          <th width='200'>CREATED AT</th>
          <th width='200'>WIDGET TOKEN</th>
          <th>JSON</th>
        </thead>
        <% @requests.each do |req| %>
        <tbody>
          <tr>
            <td><%= req.created_at %></td>
            <td><%= req.token %></td>
            <td><%= req.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
